#!/usr/bin/env python
# -*- coding: utf-8 -*-

import argparse
import sys

from pythainlp import cli

# todo: get from CLI modules
available_commands = ['corpus', 'tokenization', 'soundex']

parser = argparse.ArgumentParser()
parser.add_argument(
    "command", type=str,
    help="[%s]" % "|".join(available_commands)
)

args = parser.parse_args(sys.argv[1:2])

command = getattr(cli, args.command)

subcommand = command.App(sys.argv)
